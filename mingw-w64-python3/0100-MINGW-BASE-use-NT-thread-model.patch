+fi
 
 # check if we need libintl for locale functions
 AC_CHECK_LIB(intl, textdomain,
@@ -3036,6 +3090,11 @@
         CXX="$CXX -pthread"
     fi
     posix_threads=yes
+elif test $ac_cv_ntthread = yes
