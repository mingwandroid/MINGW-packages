# export QT_PLUGIN_PATH="\$INSTALL_DIR/lib/qt5"
# export QML2_IMPORT_PATH="\$INSTALL_DIR/lib/qml"

package() {
  cd ${srcdir}/build-${MINGW_CHOST}
  # make DESTDIR="${pkgdir}" INSTALL_ROOT="${pkgdir}" install
    make \
      INSTALL_ROOT="${pkgdir}/${MINGW_PREFIX}" \
      install
}

