# Maintainer: Sarah Ottinger <schalaalexiazeal@gmail.com>

_realname=tiny-aes-c
pkgbase=mingw-w64-${_realname}
pkgname=${MINGW_PACKAGE_PREFIX}-${_realname}
pkgver=1.0.0
pkgrel=1
pkgdesc='Small portable AES128/192/256 in C (mingw-w64)'
arch=('any')
mingw_arch=('mingw64')
url="https://github.com/kokke/tiny-AES-c"
license=('Unlicense')
depends=("${MINGW_PACKAGE_PREFIX}-gcc-libs")
makedepends=("${MINGW_PACKAGE_PREFIX}-cmake" "${MINGW_PACKAGE_PREFIX}-ninja")
source=("https://github.com/kokke/tiny-AES-c/archive/v${pkgver}.tar.gz")
sha256sums=('61fd99ac95df30e9ab39d6cdd41e88909b2eaf9b9806f23aa235485ac0bed2fd')

build() {
  [[ -d ${srcdir}/build-${MINGW_CHOST} ]] && rm -rf ${srcdir}/build-${MINGW_CHOST}
  mkdir -p "${srcdir}/build-${MINGW_CHOST}" && cd "${srcdir}/build-${MINGW_CHOST}"

  MSYS2_ARG_CONV_EXCL="-DCMAKE_INSTALL_PREFIX=" \
  ${MINGW_PREFIX}/bin/cmake \
    -GNinja \
	-DCMAKE_INSTALL_PREFIX=${MINGW_PREFIX} \
	-DCMAKE_BUILD_TYPE=Release \
    ../tiny-AES-c-$pkgver
  
  ${MINGW_PREFIX}/bin/ninja $MAKEFLAGS
}

package() {
  cd "${srcdir}/build-${MINGW_CHOST}"
  install -D -m644 libtiny-aes.a "${pkgdir}${MINGW_PREFIX}/lib/libtiny-aes.a"
  cd "${srcdir}/${_realname}-${pkgver}"
  install -D -m644 aes.h "${pkgdir}${MINGW_PREFIX}/include/aes.h"
  install -m644 aes.hpp "${pkgdir}${MINGW_PREFIX}/include/aes.hpp"
  install -D -m644 unlicense.txt "${pkgdir}${MINGW_PREFIX}/share/licenses/${_realname}/unlicense.txt"
}
